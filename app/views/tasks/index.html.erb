<ul class="list-unstyled">
  <% @tasks.each do |task| %>
    <li><%= task.done ? '[x] ' : '[ ] ' %><%= link_to task.name, task_path(task.id) %> - <%= link_to 'edit', edit_task_path(task.id) %> - <%= link_to 'delete',  task_path(task), data: { confirm: 'Are you sure?' }, method: :delete %></li>
  <% end %>
</ul>

<%= link_to 'Add a new task', new_task_path, {:class =>
"btn btn-primary center-block"} %>



